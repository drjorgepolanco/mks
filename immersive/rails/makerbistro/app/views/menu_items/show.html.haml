.row
	.large-12.medium-12.columns
		= image_tag @menu_item.image
	.large-12.medium-12.columns.centered
		%h3
			%strong= @menu_item.name
	.large-12.medium-12.columns
		.large-4.medium-4.columns.centered
			%h4= "Add Ingredients to <br /> <strong>#{@menu_item.name.titleize}</strong>".html_safe 
			= form_for [@menu_item, @ingredient] do |f|
				= f.label :name
				= f.text_field :name
				= f.submit "Add Ingredient", class: 'button expand'
		.large-8.medium-8.columns
			- if @ingredients.any?
				%h6.bold Ingredients
				%ul
					- @ingredients.each do |ingredient|
						%li= ingredient.name
			- else
				%p (Add the first ingredient!)