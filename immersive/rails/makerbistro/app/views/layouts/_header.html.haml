.row
  .large-12.columns
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            = link_to "MakerBistro", root_path
        %li.toggle-topbar.menu-icon
          %a{:href => "#"}
            %span menu
      %section.top-bar-section
        %ul.right
          %li.divider
          %li.has-dropdown
            = link_to "Menu Items"
            %ul.dropdown
              %li
                = link_to "All Items", menu_items_path
              %li
                = link_to "New Item", new_menu_item_path
          %li.divider
          %li.has-dropdown
            = link_to "Ingredients"
            %ul.dropdown
              %li
                = link_to "All Ingredients", ingredients_path
              %li
                = link_to "New Ingredient", new_ingredient_path
          